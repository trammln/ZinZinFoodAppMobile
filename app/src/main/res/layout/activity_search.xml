<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search"
    android:background="#f0f2f5"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#bd3213">
        <ImageView
            android:id="@+id/imv_Return"
            android:layout_weight="2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            android:layout_gravity="center"
            android:layout_marginStart="10dp">
        </ImageView>
        <SearchView
            android:layout_weight="4"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:layout_gravity="center"
            android:layout_marginStart="15dp">
        </SearchView>
        <ImageView
            android:id="@+id/imv_Search"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_search_24"
            android:layout_gravity="center">
        </ImageView>
        <ImageView
            android:id="@+id/imv_Spyt"
            android:layout_weight="1.5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_favorite_24_white"
            android:layout_gravity="center"
            android:layout_marginStart="5dp">
        </ImageView>
        <ImageView
            android:id="@+id/imv_GioHang"
            android:layout_weight="1.5"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_shopping_cart_24"
            android:layout_gravity="center"
            android:layout_marginStart="10dp">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="8"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="KẾT QUẢ TÌM KIẾM "
            android:gravity="left"
            android:layout_gravity="center"
            android:textColor="#bd3213"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp">
        </TextView>
        <ImageView
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/boloc">
        </ImageView>
        <TextView
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:text="Lọc"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@color/black">
        </TextView>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_Xemtatcasanpham"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Xem tất cả sản phẩm >>"
        android:textColor="#bd3213"
        android:layout_marginStart="15dp"
        android:textSize="14sp"
        android:layout_marginBottom="5dp"/>
    <GridView
        android:layout_weight="10"
        android:id="@+id/gv_BanhTrang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        android:gravity="center"
        android:layout_gravity="center">
    </GridView>

</LinearLayout>