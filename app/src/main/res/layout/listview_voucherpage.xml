<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <ImageView
        android:id="@+id/imvThumb"
        android:layout_width="140dp"
        android:layout_height="141dp"
        android:src="@drawable/discount">
    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#eceff3"
        android:padding="5dp">
        <TextView
            android:id="@+id/txtVoucherName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voucher giảm giá 10%"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#bd3213"
            android:padding="3dp"
            android:layout_marginTop="5dp">
        </TextView>
        <TextView
            android:id="@+id/txtCondition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Áp dụng với đơn hàng trên 50.000đ"
            android:textSize="12sp"
            android:textColor="#000000"
            android:paddingLeft="5dp">
        </TextView>
        <TextView
            android:id="@+id/txtTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thời gian: 12/11 - 15/11/2022"
            android:textSize="10sp"
            android:textColor="#000000"
            android:padding="5dp">
        </TextView>
        <TextView
            android:id="@+id/txtNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="P/s: Áp dụng cho toàn sàn"
            android:textSize="10sp"
            android:textStyle="italic"
            android:textColor="#000000"
            android:paddingLeft="5dp">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="right">
            <Button
                android:id="@+id/btnLuu"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:textSize="10sp"
                android:backgroundTint="#FFFFFF"
                android:text="Lưu"
                android:textColor="#000000"
                android:layout_marginRight="5dp">
            </Button>
            <Button
                android:id="@+id/btnDungNgay"
                android:layout_width="98dp"
                android:layout_height="40dp"
                android:backgroundTint="#bd3213"
                android:textSize="10sp"
                android:text="Dùng ngay"
                android:textColor="#FFFFFF"
                android:layout_marginRight="5dp">
            </Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>