<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonMuaChoThanhToan"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#bd3213"
        android:weightSum="10">
        <ImageView
            android:id="@+id/imvBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            android:backgroundTint="#bd3213"
            android:layout_marginStart="5dp"
            android:layout_weight="0.5"
            android:layout_marginTop="13dp">
        </ImageView>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="ĐƠN MUA"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="6">
        </TextView>
        <ImageView
            android:id="@+id/imvCart"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_shopping_cart_24"
            android:backgroundTint="#bd3213"
            android:layout_marginLeft="80dp"
            android:layout_weight="0.5">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/txtChoThanhToan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chờ thanh toán  |  "
            android:textSize="18sp"
            android:textColor="#bd3213">
        </TextView>
        <TextView
            android:id="@+id/txtDangGiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đang giao  |  "
            android:textSize="18sp"
            android:textColor="#6C6A6A">
        </TextView>
        <TextView
            android:id="@+id/txtDaGiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã giao   "
            android:textSize="18sp"
            android:textColor="#6C6A6A">
        </TextView>
    </LinearLayout>
    <ListView
        android:id="@+id/lvChoThanhToan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
    </ListView>
</LinearLayout>