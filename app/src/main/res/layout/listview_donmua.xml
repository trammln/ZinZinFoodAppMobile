<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="5dp">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/imv_DonMuaPic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/banhtrangbocuon"
        android:layout_marginBottom="2dp">
    </ImageView>
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/txtProNameDonMua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bánh tráng bơ cuộn thơm ngon đặc biệt"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold">
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:textSize="16sp"
                android:layout_marginLeft="250dp"
                android:textColor="#000000"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/txtQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold">
            </TextView>
        </LinearLayout>
        <TextView
            android:id="@+id/txtPriceDonMua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000"
            android:layout_marginLeft="220dp"
            android:textSize="16sp"
            android:textColor="#bd3213"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:background="#D4D6D8"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:orientation="horizontal"
        android:background="#EFE9E9">
        <TextView
            android:id="@+id/txtQuantitytotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="12sp"
            android:layout_marginLeft="4dp"
            android:textColor="#000000">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sản phẩm"
            android:textSize="12sp"
            android:layout_marginLeft="3dp"
            android:textColor="#000000">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dp"
            android:text="Thành tiền:"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/txtTotalDonMua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100000"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="#bd3213"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="đ"
            android:textSize="16sp"
            android:textColor="#bd3213"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:background="#D4D6D8"
        android:layout_gravity="center">
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đánh giá để nhận được voucher giảm giá 10%
cho lần sau."
                android:textSize="10sp"
                android:textColor="#000000">
            </TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đánh giá trước"
                    android:textSize="10sp"
                    android:textColor="#000000">
                </TextView>
                <TextView
                    android:id="@+id/txtDueDonMua"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="10/12/2022"
                    android:textSize="10sp"
                    android:layout_marginLeft="3dp"
                    android:textColor="#bd3213"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="ĐÁNH GIÁ"
            android:layout_marginLeft="50dp">
        </Button>
    </LinearLayout>
</LinearLayout>