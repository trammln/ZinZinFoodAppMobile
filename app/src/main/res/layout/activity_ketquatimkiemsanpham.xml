<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KetQuaTimKiemSanPham"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linearsp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#bd3213">
        <ImageView
            android:id="@+id/imvBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            android:backgroundTint="#bd3213"
            android:layout_marginStart="5dp"
            android:layout_weight="0.5"
            android:layout_marginTop="18dp">
        </ImageView>
        <EditText
            android:id="@+id/txtAutocompleteTextView"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:text="Bánh tráng rong biển"
            android:textColor="#FFFFFF"
            android:backgroundTint="#ffffff"
            android:layout_weight="8">
        </EditText>
        <ImageView
            android:id="@+id/imvSearch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_search_24"
            android:backgroundTint="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5">
        </ImageView>
        <ImageView
            android:id="@+id/imvCart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/ic_baseline_shopping_cart_24"
            android:backgroundTint="#bd3213"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5">
        </ImageView>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:src="@drawable/banner"
        android:layout_gravity="center">
    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:paddingBottom="5dp">
        <TextView
            android:id="@+id/txtAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tất cả    |    "
            android:textSize="16sp">
        </TextView>
        <TextView
            android:id="@+id/txtPopular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phổ biến    |    "
            android:textSize="16sp">
        </TextView>
        <TextView
            android:id="@+id/txtNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mới nhất    |    "
            android:textSize="16sp">
        </TextView>
        <TextView
            android:id="@+id/txtArrange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Theo giá"
            android:textSize="16sp">
        </TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_upward_24">
        </ImageView>
    </LinearLayout>
    <ImageView
        android:id="@+id/imvPic"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/banhtrangrongbien"
        android:layout_marginLeft="10dp">
    </ImageView>
    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="#eceff3"
        android:layout_marginBottom="10dp"
        android:paddingLeft="4dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bánh tráng rong biển cháy tỏi thơm ngon"
            android:textSize="14sp"
            android:layout_marginRight="2dp"
            android:textColor="#000000"
            android:textStyle="bold">
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12000"
                android:textSize="16sp"
                android:textColor="#bd3213"
                android:textStyle="bold"
                android:layout_marginRight="0.5dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="đ"
                android:textSize="14sp"
                android:textColor="#bd3213"
                android:textStyle="bold">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_baseline_star_rate_24">
            </ImageView>
            <TextView
                android:id="@+id/txtRate"
                android:layout_width= "wrap_content"
                android:layout_height="wrap_content"
                android:text="5.0"
                android:textSize="12sp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="3dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã bán"
                android:textSize="12sp"
                android:layout_marginLeft="10dp">
            </TextView>
            <TextView
                android:id="@+id/txtSold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="202"
                android:textSize="12sp"
                android:layout_marginLeft="4dp">
            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thành phố Hồ Chí Minh"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginBottom="5dp">
        </TextView>
    </LinearLayout>

</LinearLayout>