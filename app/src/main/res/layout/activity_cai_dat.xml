<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CaiDatActivity"
    android:orientation="vertical"
    android:backgroundTint="#eceff3"
    android:weightSum="100">

    <LinearLayout
        android:id="@+id/linear_Header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="#BD3213"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imv_Back"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"/>
        <TextView
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CÀI ĐẶT"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="93"
        android:orientation="vertical"
        android:padding="10dp">
        <!--========ĐỔI NGÔN NGỮ=============-->
        <LinearLayout
            android:id="@+id/linear_DoiNgonNgu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start"
                android:text="Ngôn ngữ"
                android:textColor="#BB3213"
                android:textSize="16dp"/>
            <LinearLayout
                android:id="@+id/linear_NgonNguNext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right">
                <TextView
                    android:id="@+id/txt_tieng"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="Tiếng Việt"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:src="@drawable/ic_baseline_chevron_right_24"/>
            </LinearLayout>
        </LinearLayout>
        <!--========CHẾ ĐỘ HIỂN THỊ=============-->
        <LinearLayout
            android:id="@+id/linear_CheDoHienThi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start"
                android:text="Chế độ hiện thị"
                android:textColor="#BB3213"
                android:textSize="16dp"/>
            <LinearLayout
                android:id="@+id/linear_CheDoHienThiNext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right">
                <TextView
                    android:id="@+id/txt_chedo"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="Sáng"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:src="@drawable/ic_baseline_chevron_right_24"/>
            </LinearLayout>
        </LinearLayout>
        <!--========THÔNG BÁO=============-->
        <LinearLayout
            android:id="@+id/linear_CaiDatThongBao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start"
                android:text="Thông báo"
                android:textColor="#BB3213"
                android:textSize="16dp"/>
            <LinearLayout
                android:id="@+id/linear_CaiDatThongBaoNext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right">
                <TextView
                    android:id="@+id/txt_CaiDatThongBao"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="Cho phép"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:src="@drawable/ic_baseline_chevron_right_24"/>
            </LinearLayout>
        </LinearLayout>
        <!--========YÊU CẦU XÓA TÀI KHOẢN=============-->
        <LinearLayout
            android:id="@+id/linear_YeuCauXoaTaiKhoan"
            android:layout_width="match_parent"
            android:weightSum="10"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="Yêu cầu xóa tài khoản"
                android:textColor="#BB3213"
                android:textSize="16dp"/>
            <ImageView
                android:layout_gravity="end"
                android:id="@+id/imv_YeuCauXoaTaiKhoanNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@drawable/ic_baseline_chevron_right_24"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>